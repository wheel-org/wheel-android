<LinearLayout
    android:id="@+id/left_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/drawer_user_row"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="24dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="32dp">

            <ImageView
                android:id="@+id/drawer_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/default_user"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="Felix Guo"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/drawer_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:padding="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="TextView" android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>

    <LinearLayout
        android:id="@+id/drawer_create_room_btn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">
        <TextView
            android:id="@+id/drawer_room_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Create a Room" android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"/>
    </LinearLayout>
    <include layout="@layout/horizontal_divider"
             layout_width="match_parent"
    />
    <ListView
        android:id="@+id/drawer_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>
</LinearLayout>
