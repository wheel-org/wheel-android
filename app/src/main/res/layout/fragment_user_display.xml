<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:elevation="24dp"
        android:innerRadius="0dp" android:shape="ring"
        android:thicknessRatio="1.9" app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/user_display_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/default_user"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/user_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="Felix Guo"
            android:textAlignment="center"
            android:textSize="24sp" android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_display_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:padding="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="TextView"
            android:textAlignment="center" android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
