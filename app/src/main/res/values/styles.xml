<resources>

    <!-- Base application theme. -->
    <style name="WheelTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/WheelTheme.Button</item>
    </style>

    <style name="WheelTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WheelTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WheelTheme.PopupTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WheelTheme.TextBox" parent="WheelTheme">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:ems">10</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="WheelTheme.Button" parent="WheelTheme">
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
